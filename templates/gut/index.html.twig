{% extends 'base.html.twig' %}

{% block title %}Gut index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Gut index</h1>
        <div class="row mt-5">
            <div class="col-2"><a href="{{ path('app_gut_new') }}">Create new</a>
            </div>
            <div class="col-6">
                <table class="table ml-5 mr-5">
                    <thead>
                        <tr>
                            <th>Reaction</th>
                            <th>Date & time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for gut in guts %}
                            <tr>
                                <td>{{ gut.reaction }}</td>
                                <td>{{ gut.happened ? gut.happened|date('l, F j, Y') }} {{ gut.happened ? gut.happened|date('g:i A') }}</td>
                                <td>
                                    <a href="{{ path('app_gut_show', {'id': gut.id}) }}">show</a>
                                    <a href="{{ path('app_gut_edit', {'id': gut.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endblock %}
