{{ form_start(form) }}
<div class="row">
    <div class="col-3">
        Reaction
        {{ form_widget(form.reaction) }}
    </div>
    <div class="col-3">
        Comment
        {{ form_widget(form.description) }}
    </div>
</div>
<div class="row">
    <div class="col-3">
        Date
        {{ form_widget(form.happened.date) }}
    </div>
    <div class="col-3">
        Time
        {{ form_widget(form.happened.time) }}
    </div>
</div>
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}