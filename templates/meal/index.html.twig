{% extends 'base.html.twig' %}

{% block title %}Meals{% endblock %}

{% block body %}
    <h1>Meals</h1>

    <a href="{{ path('app_meal_new') }}">Create new</a>
    {% if meals is not null %}
        <div class="row">
            <div class="col-3"></div>
            <div class="col-1">
                <h5>Meal</h5>
            </div>
            <div class="col-3">
                <h5>Date</h5>
            </div>
            <div class="col-2">
                <h5>Actions</h5>
            </div>
        </div>
        <hr>
        {% for meal in meals %}
            <div class="row">
                <div class="col-3"></div>
                <div class="col-1 mb-1">
                    {{ meal.mealType }}
                </div>
                <div class="col-3 mb-1">
                    {{ meal.date ? meal.date|date('l, F j, Y') }}
                </div>
                <div class="col-2 mb-1">
                    <a href="{{ path('app_meal_show', {'id': meal.id}) }}">show</a>
                    <a href="{{ path('app_meal_edit', {'id': meal.id}) }}">edit</a>
                </div>
            </div>
            {% if meal.mealType == 'Breakfast' %}
                <hr>
            {% endif %}
        {% endfor %}

{% else %}
    Please <a href="/food/new">add some food</a> to the larder first
{% endif %}
{% endblock %}
