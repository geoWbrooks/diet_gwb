{% extends 'base.html.twig' %}

{% block title %}New Meal{% endblock %}

{% block body %}
    <h1>Create new Meal</h1>
    <div class="row">
        <div class="col-12">

            {{ include('meal/_form.html.twig') }}
        </div>
    </div>

    <a href="{{ path('app_meal_index') }}">back to list</a>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css"/>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" defer ></script>
    <script>
        $(document).ready(function () {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>
    {{ encore_entry_script_tags('foods') }}
{% endblock %}
